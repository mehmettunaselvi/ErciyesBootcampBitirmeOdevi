@model BitirmeOdev.Models.Kullanici

<!-- Section: Design Block -->
<section class="text-center">
    <!-- Background image -->
    <div class="p-5 bg-image" style="
        background-image: url('https://mdbootstrap.com/img/new/textures/full/171.jpg');
        height: 300px;
        "></div>
    <!-- Background image -->

    <div class="card mx-4 mx-md-5 shadow-5-strong" style="
        margin-top: -100px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        ">
        <div class="card-body py-5 px-md-5">

            <div class="row d-flex justify-content-center">
                <div class="col-lg-8">
                    <h2 class="fw-bold mb-5">Sign up now</h2>
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <!-- 2 column grid layout with text inputs for the first and last names -->
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="form-outline">
                                    <input asp-for="Ad" type="text" id="form3Example1" class="form-control" />
                                    <label class="form-label" for="form3Example1">Ad</label>
                                    <span asp-validation-for="Ad" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="col-md-6 mb-4">
                                <div class="form-outline">
                                    <input asp-for="Soyad" type="text" id="form3Example2" class="form-control" />
                                    <label class="form-label" for="form3Example2">Soyad</label>
                                    <span asp-validation-for="Soyad" class="text-danger"></span>

                                </div>
                            </div>
                        </div>

                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <input asp-for="Email" type="email" id="form3Example3" class="form-control" />
                            <label class="form-label" for="form3Example3">Email adres</label>
                            <span asp-validation-for="Email" class="text-danger"></span>

                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <input asp-for="Sifre" type="password" id="form3Example4" class="form-control" />
                            <label class="form-label" for="form3Example4">Şifre</label>
                            <span asp-validation-for="Sifre" class="text-danger"></span>

                        </div>



                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-block mb-4">
                            Kayıt Ol
                        </button>


                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Section: Design Block -->