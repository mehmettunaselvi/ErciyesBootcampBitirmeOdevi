@model BitirmeOdev.Models.Urun

<h1>Ürün Düzenle</h1>

<form asp-action="Duzenle" method="post">
    <table class="table">
        <thead>
            <th><label asp-for="Ad"></label></th>
            <th><label asp-for="Aciklama"></label></th>
            <th><label asp-for="Marka"></label></th>
            <th><label asp-for="Gorsel"></label></th>
            <th></th>
        </thead>
        <tbody>
            <tr>
                <td>
                    <input type="text" asp-for="Ad" />
                    <span asp-validation-for="Ad"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <textarea asp-for="Aciklama"></textarea>
                    <span asp-validation-for="Aciklama"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <input type="text" asp-for="Marka" />
                    <span asp-validation-for="Marka"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <input type="text" asp-for="Gorsel" />
                    <span asp-validation-for="Gorsel"></span>
                </td>
            </tr>
            <tr>
                <td><input type="submit" name="Düzenle" class="btn btn-primary" /></td>
            </tr>
        </tbody>
    </table>
</form>

